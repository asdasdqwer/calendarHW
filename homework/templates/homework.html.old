        <meta name="viewport" content="width=device-width,initial-scale=1.0">
	<meta http-equiv="Content-Security-Policy" content="script-src 'self';">
    </head>

    <body>
        {{ taskList|json_script:"task" }}
         
        <img src="https://upload.wikimedia.org/wikipedia/commons/b/b2/Hamburger_icon.svg" id="img" class="unclicked">
        <div id="links">
            {% if perms.homework.add_task %}
            <a class="menulinks" href="/add">Aufgabe hinzufügen</a>
            {% endif %}
            <a class="menulinks" href="/course">Kurswahl ändern</a>
            <a class="menulinks" href="/feedback">Feedback</a>
            <a class="menulinks" href="https://www.youtube.com/watch?v=dQw4w9WgXcQ">Kontakt</a>
            <a class="menulinks" href="https://www.youtube.com/watch?v=dQw4w9WgXcQ">Über uns</a>
            <a class="menulinks" href="/logout">Ausloggen</a>
        </div>
        <script>
            var img = document.getElementById("img");
            var links = document.getElementById("links");
            img.onclick = function() {
                if (img.className == "unclicked") {
                    img.className = "clicked";
                    img.src = "https://upload.wikimedia.org/wikipedia/commons/e/ef/Cross_CSS_Red.svg";
                    links.style.top = "0";
                }
                
                else {
                    img.className = "unclicked";
                    img.src = "https://upload.wikimedia.org/wikipedia/commons/b/b2/Hamburger_icon.svg";
                    //links.style.top = (parseFloat(getComputedStyle(links).top) - 1000).toString() + 'px';
                    links.style.top = "-100vh";
                    
                }
            }
        </script>
        
        
        <div id="week21" class="week-2">
            <div id="week1" class="week">
